<form class="{{cssClass}} flexcol drop-target" autocomplete="off">
  {{> journalEntryPageHeader}}

  <div class="form-group">
    <label>{{localize "JOURNALENTRYPAGE.MKA.Class.Item"}}</label>
    <div class="form-fields">
      <ol class="items-list">
        {{#if document.system.item}}
          <li class="item flexrow" data-item-uuid="{{document.system.item}}" data-item-type="class">
            <div clas="item.name">{{{mka-linkForUuid document.system.item}}}</div>
            <div class="item-controls flexrow">
              <a class="item-control item-delete" data-tooltip="MKA.ItemDelete">
                <i class="fas fa-trash"></i>
              </a>
            </div>
          </li>
        {{else}}
          <li class="item flexrow">{{localize "JOURNALENTRYPAGE.MKA.Class.ItemHint"}}</li>
        {{/if}}
      </ol>
    </div>
  </div>

  <div class="form-group">
    <label>{{localize "JOURNALENTRYPAGE.MKA.Class.Description"}}</label>
    <div class="form-fields">
      <button class="launch-text-editor" data-target="system.description.value">
        <i class="fas fa-edit"></i> {{localize "JOURNALENTRYPAGE.MKA.EditDescription"}}
      </button>
    </div>
    <p class="hint">{{localize "JOURNALENTRYPAGE.MKA.Class.DescriptionHint"}}</p>
  </div>

  <div class="form-group">
    <label>{{localize "JOURNALENTRYPAGE.MKA.Class.AdditionalHitPoints"}}</label>
    <div class="form-fields">
      <button class="launch-text-editor" data-target="system.description.additionalHitPoints">
        <i class="fas fa-edit"></i> {{localize "JOURNALENTRYPAGE.MKA.EditDescription"}}
      </button>
    </div>
    <p class="hint">{{localize "JOURNALENTRYPAGE.MKA.Class.AdditionalHitPointsHint"}}</p>
  </div>

  <div class="form-group">
    <label>{{localize "JOURNALENTRYPAGE.MKA.Class.AdditionalTraits"}}</label>
    <div class="form-fields">
      <button class="launch-text-editor" data-target="system.description.additionalTraits">
        <i class="fas fa-edit"></i> {{localize "JOURNALENTRYPAGE.MKA.EditDescription"}}
      </button>
    </div>
    <p class="hint">{{localize "JOURNALENTRYPAGE.MKA.Class.AdditionalTraitsHint"}}</p>
  </div>

  <div class="form-group">
    <label>{{localize "JOURNALENTRYPAGE.MKA.Class.AdditionalEquipment"}}</label>
    <div class="form-fields">
      <button class="launch-text-editor" data-target="system.description.additionalEquipment">
        <i class="fas fa-edit"></i> {{localize "JOURNALENTRYPAGE.MKA.EditDescription"}}
      </button>
    </div>
    <p class="hint">{{localize "JOURNALENTRYPAGE.MKA.Class.AdditionalEquipmentHint"}}</p>
  </div>

  <div class="form-group">
    <label>{{localize "JOURNALENTRYPAGE.MKA.Class.SubclassHeader"}}</label>
    <div class="form-fields">
      <input type="text" name="system.subclassHeader" value="{{system.subclassHeader}}">
    </div>
  </div>

  <div class="form-group">
    <label>{{localize "JOURNALENTRYPAGE.MKA.Class.SubclassDescription"}}</label>
    <div class="form-fields">
      <button class="launch-text-editor" data-target="system.description.subclass">
        <i class="fas fa-edit"></i> {{localize "JOURNALENTRYPAGE.MKA.EditDescription"}}
      </button>
    </div>
    <p class="hint">{{localize "JOURNALENTRYPAGE.MKA.Class.SubclassDescriptionHint"}}</p>
  </div>

  <div class="form-group">
    <label>{{localize "JOURNALENTRYPAGE.MKA.Class.SubclassItems"}}</label>
    <div class="form-fields">
      <ol class="items-list">
        {{#each subclasses}}
          <li class="item flexrow" data-item-uuid="{{this.document.uuid}}" data-item-type="subclass">
            <div clas="item-name">{{{mka-linkForUuid this.document.uuid}}}</div>
            <div class="item-controls flexrow">
              <a class="item-control item-delete" data-tooltip="MKA.ItemDelete">
                <i class="fas fa-trash"></i>
              </a>
            </div>
          </li>
        {{else}}
          <li class="item flexrow">{{localize "JOURNALENTRYPAGE.MKA.Class.SubclassHint"}}</li>
        {{/each}}
      </ol>
    </div>
  </div>
</form>
