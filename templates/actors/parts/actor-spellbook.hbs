<div class="inventory-filters spellbook-filters flexrow">
    <div class="form-group spellcasting-ability">
        {{#unless isNPC}}
        <label>{{localize "MKA.Spellcasting"}}</label>
        {{else}}
        <label>{{localize "MKA.Level"}}</label>
        {{numberInput system.details.spellLevel name="system.details.spellLevel" class="spellcasting-level"
                      placeholder="0" min=0 step=1}}
        {{/unless}}
        <select name="system.attributes.spellcasting" data-type="String">
            {{#select system.attributes.spellcasting}}
            <option value="">{{localize "MKA.None"}}</option>
            {{#each abilities as |abl a|}}
            <option value="{{a}}">{{abl.label}}</option>
            {{/each}}
            {{/select}}
        </select>
        <span>{{localize "MKA.AbbreviationDC"}} {{system.attributes.spelldc}}</span>
    </div>

    <ul class="filter-list flexrow" data-filter="spellbook">
        <li class="filter-item" data-filter="action">{{localize "MKA.Action"}}</li>
        <li class="filter-item" data-filter="bonus">{{localize "MKA.BonusAction"}}</li>
        <li class="filter-item" data-filter="reaction">{{localize "MKA.Reaction"}}</li>
        <li class="filter-item" data-filter="concentration">{{localize "MKA.AbbreviationConc"}}</li>
        <li class="filter-item" data-filter="ritual">{{localize "MKA.Ritual"}}</li>
        <li class="filter-item" data-filter="prepared">{{localize "MKA.Prepared"}}{{#if preparedSpells}} ({{preparedSpells}}){{/if}}</li>
    </ul>
</div>

<ol class="items-list inventory-list">
{{#each spellbook as |section|}}
    <li class="items-header spellbook-header flexrow">
        <div class="item-name flexrow">
            <h3>{{section.label}}</h3>
            <div class="spell-slots">
                {{#if section.usesSlots}}
                <input type="text" name="system.spells.{{section.prop}}.value" value="{{section.uses}}" placeholder="0"
                       data-dtype="Number">
                <span class="sep"> / </span>
                <span class="spell-max" data-level="{{section.prop}}" data-slots="{{section.slots}}">
                    {{{section.slots}}}
                    {{#if section.editable}}
                    <a class="slot-max-override" data-tooltip="MKA.SpellProgOverride">
                        <i class="fas fa-edit"></i>
                    </a>
                    {{/if}}
                </span>
                {{ else }}
                <span>{{{section.uses}}}</span>
                <span class="sep"> / </span>
                <span class="spell-max">{{{section.slots}}}</span>
                {{/if}}
            </div>
        </div>
        <div class="spell-school">{{localize "MKA.SpellPath"}}</div>
        <div class="spell-action">{{localize "MKA.SpellUsage"}}</div>
        <div class="spell-target">{{localize "MKA.SpellTarget"}}</div>

        <div class="item-controls flexrow">
            {{#if section.canCreate}}
            <a class="item-control item-create" data-tooltip="MKA.SpellCreate"
                {{#each section.dataset as |v k|}}data-{{k}}="{{v}}"{{/each}}>
                <i class="fas fa-plus"></i> {{localize "MKA.Add"}}
            </a>
            {{/if}}
        </div>
    </li>

    <ol class="item-list">
    {{#each section.spells as |item i|}}
    {{#mka-itemContext item as |ctx|}}
        <li class="item flexrow {{#if ctx.isExpanded}}expanded{{/if}}" data-item-id="{{item.id}}">
            <div class="item-name flexrow rollable">
                <div class="item-image" tabindex="0" role="button" aria-label="{{item.name}}" style="background-image: url('{{item.img}}')"></div>
                <h4>{{item.name}}</h4>
                {{#if item.system.uses.per }}
                <div class="item-detail spell-uses">Uses {{item.system.uses.value}} / {{item.system.uses.max}}</div>
                {{/if}}
                <div class="spell-comps">
                    {{#each item.labels.components.all}}
                    <span class="spell-component{{#if tag}} tag{{/if}}">{{abbr}}</span>
                    {{/each}}
                </div>
            </div>
            <div class="spell-school">{{item.labels.school}}</div>
            <div class="spell-action">{{item.labels.activation}}</div>
            <div class="spell-target" data-tooltip="{{localize 'MKA.Range'}}: {{item.labels.range}}">
                {{#if item.labels.target}}
                {{item.labels.target}}
                {{else}}{{localize 'MKA.None'}}
                {{/if}}
            </div>

            {{#if @root.owner}}
            <div class="item-controls flexrow">
                {{#if section.canPrepare}}
                <a class="item-control item-toggle {{ctx.toggleClass}}" data-tooltip="{{ctx.toggleTitle}}">
                    <i class="fas fa-sun"></i>
                </a>
                {{/if}}
                <a class="item-control item-edit" data-tooltip="MKA.ItemEdit">
                    <i class="fas fa-edit"></i>
                </a>
                <a class="item-control item-delete" data-tooltip="MKA.ItemDelete">
                    <i class="fas fa-trash"></i>
                </a>
            </div>
            {{/if}}

            {{#if ctx.isExpanded}}
                {{> "mka.item-summary" (lookup @root.expandedData item.id)}}
            {{/if}}
        </li>
    {{/mka-itemContext}}
    {{/each}}
    </ol>
{{else}}
    {{#if owner}}
    {{#if filters.spellbook.size}}
    <li class="item flexrow"><p class="notes">{{localize "MKA.FilterNoSpells"}}</p></li>
    {{else}}
    <li class="item flexrow inventory-header spellbook-header spellbook-empty">
        <div class="item-controls flexrow">
            <a class="item-control item-create" data-tooltip="MKA.SpellCreate" data-type="spell" data-level="{{lvl}}">
                <i class="fas fa-plus"></i> {{localize "MKA.SpellAdd"}}
            </a>
        </div>
    </li>
    <li class="item flexrow"><p class="notes">{{localize "MKA.NoSpellLevels"}}</p></li>
    {{/if}}
    {{/if}}
{{/each}}
</ol>
