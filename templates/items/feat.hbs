<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Item Sheet Header --}}
    <header class="sheet-header flexrow">
        <img class="profile" src="{{item.img}}" data-tooltip="{{item.name}}" data-edit="img"/>

        <div class="header-details flexrow">
            <h1 class="charname">
                <input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'MKA.ItemName' }}"/>
            </h1>

            <div class="item-subtitle">
                <h4 class="item-type">{{itemType}}</h4>
                <span class="item-status">{{itemStatus}}</span>
            </div>

            <ul class="summary flexrow">
                <li>
                    {{labels.featType}}
                </li>
                <li>
                    <input type="text" name="system.requirements" value="{{system.requirements}}" placeholder="{{ localize 'MKA.Requirements' }}"/>
                </li>
                <li>
                    <input type="text" name="system.source" value="{{system.source}}" placeholder="{{ localize 'MKA.Source' }}"/>
                </li>
            </ul>
        </div>
    </header>

    {{!-- Item Sheet Navigation --}}
    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize "MKA.Description" }}</a>
        <a class="item" data-tab="details">{{ localize "MKA.Details" }}</a>
        <a class="item" data-tab="effects">{{ localize "MKA.Effects" }}</a>
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        {{> "mka.item-description"}}

        {{!-- Details Tab --}}
        <div class="tab details" data-group="primary" data-tab="details">
            <h3 class="form-header">{{localize "MKA.ItemFeatureDetails"}}</h3>

            {{!-- Feature Type --}}
            <div class="form-group">
                <label>{{localize "MKA.ItemFeatureType"}}</label>
                <select name="system.type.value">
                    {{selectOptions config.featureTypes selected=system.type.value blank="" labelAttr="label"}}
                </select>
            </div>

            {{#if featureSubtypes}}
            <div class="form-group">
                <label>
                    {{localize "MKA.ItemFeatureSubtype"
                        category=(lookup (lookup config.featureTypes system.type.value) "label")}}
                </label>
                <select name="system.type.subtype">
                    {{selectOptions featureSubtypes selected=system.type.subtype blank=""}}
                </select>
            </div>
            {{/if}}

            <h3 class="form-header">{{ localize "MKA.FeatureUsage" }}</h3>

            {{!-- Item Activation Template --}}
            {{> "mka.item-activation"}}

            {{!-- Recharge Requirement --}}
            {{#if system.activation.type}}
            <div class="form-group recharge">
                <label>{{ localize "MKA.FeatureActionRecharge" }}</label>
                <div class="form-fields">
                    <span>{{ localize "MKA.FeatureRechargeOn" }}</span>
                    {{numberInput system.recharge.value name="system.recharge.value"
                        placeholder=(localize "MKA.FeatureRechargeResult")}}
                    <label class="checkbox">
                        {{ localize "MKA.Charged" }}
                        <input type="checkbox" name="system.recharge.charged" {{checked system.recharge.charged}}/>
                    </label>
                </div>
            </div>
            {{/if}}

            <h3 class="form-header">{{ localize "MKA.FeatureAttack" }}</h3>

            {{!-- Item Action Template --}}
            {{> "mka.item-action"}}
        </div>

        {{!-- Effects Tab --}}
        <div class="tab effects flexcol" data-group="primary" data-tab="effects">
            {{> "mka.active-effects"}}
        </div>
    </section>
</form>
