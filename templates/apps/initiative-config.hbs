<form autocomplete="off">
    <p class="notes">{{localize "MKA.InitiativeConfigHint"}}</p>

    <div class="form-group">
        <label>{{localize "MKA.AbilityModifier"}}</label>
        <div class="form-fields">
            <select name="system.attributes.init.ability">
                {{selectOptions abilities selected=ability blank="" labelAttr="label"}}
            </select>
        </div>
    </div>

    <div class="form-group">
        <label>{{localize "MKA.InitiativeBonus"}}</label>
        <div class="form-fields">
            <input name="system.attributes.init.bonus" type="text" value="{{bonus}}"/>
        </div>
    </div>

    <div class="form-group">
        <label>{{localize "MKA.FlagsAlert"}}</label>
        <input type="checkbox" name="flags.mka.initiativeAlert" {{checked initiativeAlert}}/>
    </div>

    <div class="form-group">
        <label>{{localize "MKA.FlagsInitiativeAdv"}}</label>
        <input type="checkbox" name="flags.mka.initiativeAdv" {{checked initiativeAdv}}/>
    </div>

    <button type="submit"><i class="far fa-save"></i> {{ localize "Submit"}}</button>
</form>
