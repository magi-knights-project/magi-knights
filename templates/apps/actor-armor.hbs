<form>
    <div class="ac-field form-group">
        <input type="number" name="ac.flat" {{disabled valueDisabled}}
               value="{{#if isFlat}}{{ac.flat}}{{else}}{{ac.value}}{{/if}}">
    </div>

    <div class="form-group select">
        <label>{{localize "MKA.ArmorClassCalculation"}}</label>
        <select name="ac.calc">
            {{selectOptions calculations selected=ac.calc labelAttr="label"}}
        </select>
    </div>

    <div class="form-group stacked">
        <label>{{localize "MKA.ArmorClassFormula"}}</label>
        <input type="text" name="ac.formula" value="{{formula}}" {{disabled formulaDisabled}}>
    </div>

    <button type="submit">
        <i class="far fa-save"></i> {{ localize "MKA.TraitSave" }}
    </button>
</form>
